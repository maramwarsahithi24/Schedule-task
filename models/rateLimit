const mongoose = require('mongoose');

const rateLimitSchema = new mongoose.Schema({
    userId: {
        type: mongoose.Schema.Types.ObjectId,
        ref: "User",
        required: true,
        unique: true
    },
    windowStart: {
        type: Date,
        default: Date.now
    },
    requestCount: {
        type: Number,
        default: 1
    }
},
{ timestamps: true }
);

module.exports = mongoose.model("RateLimit", rateLimitSchema);
