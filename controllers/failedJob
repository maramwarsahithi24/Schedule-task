const failedJobService = require("../services/failedJobService");

class FailedJobController {
  async getJobs(req, res) {
    try {
      const jobs = await failedJobService.getAllJobs();
      res.json(jobs);
    } catch (err) {
      res.status(500).json({ error: err.message });
    }
  }

  async retryJobs(req, res) {
    try {
      const result = await failedJobService.retryJobs();
      res.json(result);
    } catch (err) {
      res.status(500).json({ error: err.message });
    }
  }
}

module.exports = new FailedJobController();
